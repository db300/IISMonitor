<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off">

  <variable name="logDir" value="${basedir}/logs"/>
  <variable name="logLayout" value="${longdate} [${level:uppercase=true}] ${logger} - ${message}${onexception:inner= ${newline}${exception:format=tostring}}"/>

  <targets>
    <target xsi:type="File" name="infofile"
            fileName="${logDir}/${shortdate}_info.log"
            layout="${logLayout}"
            encoding="utf-8"
            archiveAboveSize="10485760"
            maxArchiveFiles="30"/>

    <target xsi:type="File" name="warnfile"
            fileName="${logDir}/${shortdate}_warn.log"
            layout="${logLayout}"
            encoding="utf-8"
            archiveAboveSize="10485760"
            maxArchiveFiles="30"/>

    <target xsi:type="File" name="errorfile"
            fileName="${logDir}/${shortdate}_error.log"
            layout="${logLayout}"
            encoding="utf-8"
            archiveAboveSize="10485760"
            maxArchiveFiles="30"/>
  </targets>

  <rules>
    <logger name="*" level="Info" writeTo="infofile"/>
    <logger name="*" level="Warn" writeTo="warnfile"/>
    <logger name="*" level="Error" writeTo="errorfile"/>
  </rules>
</nlog>
